<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.mobile_immanueljoseph_2301852215.viewmodel.UserDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_basic_page"
            tools:context=".ui.UserDetailActivity">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_basic_page"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_page_height">

                    <ImageView
                        android:id="@+id/iv_back_button"
                        android:layout_width="@dimen/back_btn_toolbar_size"
                        android:layout_height="@dimen/back_btn_toolbar_size"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center_horizontal"
                        app:srcCompat="@drawable/ic_arrow_back" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textSize="@dimen/user_detail_header_txtSize"
                        tools:text="victor"
                        android:text="@{viewmodel.username}"/>
                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/detail_user_iv_size"
                        android:layout_height="@dimen/detail_user_iv_size"
                        app:srcCompat="@drawable/ic_person"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/user_detail_header_txtSize"
                        tools:text="victor"
                        android:text="@{viewmodel.name}" />

                    <TextView
                        android:id="@+id/tv_todos_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="@dimen/user_detail_header_txtSize"
                        tools:text="Todos : 3"
                        android:text='@{"Todos : " + viewmodel.todosCount}' />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/detail_user_line"/>
            </com.google.android.material.appbar.AppBarLayout>
            <include
                android:id="@+id/fill_page"
                layout="@layout/fill_page_with_string_layout"
                android:visibility="gone"
                bind:foo="@{1}" />

            <include
                android:id="@+id/rv_todos"
                layout="@layout/content_todo"
                bind:foo="@{2}" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <include
            android:id="@+id/progress_bar_layout"
            layout="@layout/progress_bar"
            bind:foo="@{3}" />
    </RelativeLayout>
</layout>