<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.mobile_immanueljoseph_2301852215.viewmodel.SearchUserViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_search_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_basic_page"
            tools:context=".ui.SearchUserActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_basic_page"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/toolbar_layout"
                            bind:foo="@{4}"
                            layout="@layout/search_toolbar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="@dimen/basic_page_padding"
                    android:paddingRight="@dimen/basic_page_padding"
                    android:text='@{"Result for \"" + viewmodel.searchQuery + "\""}'
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.appbar.AppBarLayout>
            <include
                android:id="@+id/fill_page"
                layout="@layout/fill_page_with_string_layout"
                android:visibility="gone"
                bind:foo="@{1}" />

            <include
                android:id="@+id/rv_users"
                layout="@layout/content_todo"
                bind:foo="@{2}" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <include
            android:id="@+id/progress_bar_layout"
            layout="@layout/progress_bar"
            bind:foo="@{3}" />
    </RelativeLayout>
</layout>